  <div class="boxrow">
  
    <%= map_box('Wir wählen Armin[?]') %>
    
    <div class="box" id="tasks">
      <h2>Jetzt aktiv werden</h2>
      <div class="content">
        
        <% if @tasks.size > 0 %>
          <ul>
            <% @tasks.each { |task| %>
              <%= render :partial => 'tasks/task', :locals => { :task => task } %>
            <% } %>
          </ul>
          <%= link_to "Weitere Projekte...", task_list_path, :class => 'more' %>
        <% else %>
            Leider derzeit keine Tasts.
        <% end %>                


      </div>
    </div>

  </div>
  
