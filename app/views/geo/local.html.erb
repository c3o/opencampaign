<div class="page" style="margin-bottom: 10px">
  <h2 style="padding-bottom: 15px;">Wahlkreis <%= @constituency.name %> <span class="code"><%= @constituency.code %></span></h2>
</div>

<div class="boxrow">
  <div class="box" id="candidates">
    <h2>Kandidaten</h2>
    <div class="content">
      <% if @constituency.candidates.size > 0 %>
        <%= render :partial => 'shared/candidate', :collection => @constituency.candidates.each {|e| e.constituency = nil} %>
      <% else %>
        <p>Daten folgen...</p>
      <% end %>
    </div>
  </div>

  <div class="box" id="events">
    <h2>Events</h2>
    <div class="content">
      <% if @events.size > 0 %>
        <%= render :partial => 'shared/event', :collection => @events %>
      <% else %>
        <p>
          Leider derzeit keine Veranstaltungen.<br />
          <a href="mailto:dialog@lif.at?subject=Veranstaltung in Wahlkreis <%= @constituency.name %>">UnterstÃ¼tzertreffen organisieren</a>
        </p>
      <% end %>
    </div>
  </div> 
  
  <div class="box" id="events">
    <h2>Statistiken</h2>
    <div class="content">
      <p>
        Deklarierte LIF-UnterstÃ¼tzer: <div class="number"><%= @constituency.usercount > 3 ? @constituency.usercount : "<10" %></div>
        <br />
      </p>
    </div>
  </div>
</div>

<div class="page" id="comments">
  <h2>Diskussion</h2>
  <div class="content">
    <%= render :partial => 'shared/newcomment', :locals => { :object => @constituency } %>
    <%= render :partial => 'shared/comment', :collection => @constituency.comments %>
  </div>
</div>
