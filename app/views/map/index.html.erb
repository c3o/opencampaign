<html>
  <head>
    <script src="http://google.com/jsapi?key=ABQIAAAAAw-Wv07EcXs7QUUotGk2xBT-j_dSY6Ha2ajsKWuztfDBCn8orhRSoxcY4r_el1-87g0n7K5Zdh5bfA"></script>
    <%= GMap.header :hl => 'de' %>
    <%= javascript_include_tag :defaults %>
    <script src="/javascripts/egeoxml.js" type="text/javascript"> </script>
    <script src="/javascripts/epoly.js" type="text/javascript"> </script>
    <script>
      window.Map = {
        last_added_marker: null,
        place_marker: function(gemeinde, info, constituency) {
          // Strip ( (consitiuency from the gemeinde)
          var pos = gemeinde.indexOf("(");
          if (pos > -1) gemeinde = gemeinde.substr(0,pos-1);
          var address = gemeinde + ", Österreich";
          geocoder = new GClientGeocoder();
          geocoder.getLatLng(
              address,
              function(point) {
                if (point) {
                  if (Map.last_added_marker) map.removeOverlay(Map.last_added_marker);
                  var marker = new GMarker(point);
                  map.addOverlay(marker);
                  Map.last_added_marker = marker;
                  if (info) {
                    var zoomlevel = (constituency && constituency.indexOf('Wien ') > -1) ? 11 : 8;
                    map.setCenter(point, zoomlevel)
                    marker.openInfoWindowHtml(info);
                  }
                }
              }
          );
        },
        init_overlays: function(map, kml_url) {
          var geoXml = new GGeoXml(kml_url);
          map.addOverlay(geoXml);
          map.removeMapType(G_HYBRID_MAP);
          map.removeMapType(G_NORMAL_MAP);
          map.removeMapType(G_SATELLITE_MAP);
          var topRight = new GControlPosition(G_ANCHOR_TOP_RIGHT, new GSize(10,10));
          map.addControl(new GSmallMapControl(), topRight);
        },
        // Show login form instead of signup
        login: function() {
          $('map_overlay_signup').style.display = 'none';
          $('map_overlay_login').style.display = 'block';
        },
        toggle_vienna_dropdown: function(show) {
          if (show) { 
            $('town_district').addClassName('state_district');
            $('user_district').enable();
          } else {
            $('town_district').removeClassName('state_district');
            $('user_district').disable();
          }
          
        }
      };
      
      window.onload = addCodeToFunction(window.onload,function() {
        // propagate Map object to parent window
        parent.Map = window.Map; 
      });
    </script>
    <style>
      body {
        margin: 0;
        font-size: 87%;
        font-family: Arial, Helvetica, sans-serif;
      }  
      #map_container, .map_overlay {
        position: absolute;
        left: 0; top: 0;        
      }
      #map_container {
        z-index: 9;
        width: 100%; height: 100%;
      }
      .map_overlay {
        width: 280px;
        z-index: 10;
        background:url(/images/white75.png);
        color: #000;
        padding: 10px;
      }
      #map_overlay_login {
        position: absolute;
        right: 0;
        left: auto;
        display: none;
      }
      #user_town_auto_complete { color: #000; }
      .map_overlay p { margin: 0 0 3px 0; }
      .map_overlay label {
        font-weight: bold;
        display: block;
        float: left;
        clear: left;
        width: 50px;
        font-size: .9em;
      }
      #map_overlay_login label {
        width: 60px;  
      }      
      form .error label {
        width: 100% !important;
        color: #c00;
      }
      .map_overlay input {
        font-size: 1.1em;
      }
      #signup_name input, #signup_email input, #signup_town input {
        width: 220px;      
      }
      .disclaimer { font-size: .8em; margin-left: 1em; color: #666; }
      #town_district #district { display: none; }
      #town_district.state_district #town { display: none; }
      #town_district.state_district #district { display: block; }
    </style>
  </head>
  <body> 
  <!-- <%= current_user %> -->
    <% if !logged_in? %>

      <% remote_form_for :user, :url => users_path, :html => { :id => 'map_overlay_signup', :class => "map_overlay" } do |f| -%>
        <p id="signup_name">
          <label for="name">Name</label>
          <%= f.text_field :name, :value => "(oder Pseudonym)", :onclick => "if(this.value == '(oder Pseudonym)') this.value = '';" %>
        </p>
        <p id="signup_email">
          <label for="email">Email</label>
          <%= f.text_field :email %>
        </p>
        <p id="signup_town">
          <label for="town">Ort</label>
          <span id="town_district">
            <span id="town">
              <%= text_field_with_auto_complete(:user, :town, {}, {:after_update_element => "function(e,v) { Map.place_marker(e.value); }", :url => autocomplete_town_users_path, :frequency => 0.5}) %>
            </span>
            <span id="district">
              <select id="user_district" name="user[district]" autocomplete="off" onchange="if(this.options[this.selectedIndex].value=='other') { Map.toggle_vienna_dropdown(false); }">
                <option value="wien">Wien...</option>
                <% for district in Town.vienna_districts %>
                  <option value="<%= district.id %>"><%= district.name %></option>
                <% end %>
                <option value="other">Außerhalb...</option>
              </select>
            </span>
          </span>
        </p>
        <p>
          <%= submit_tag 'Farbe bekennen' %>
          <a class="disclaimer" href="/datenschutz" target="_top">Datenschutz-Erklärung</a>
        </p>
      <% end %>
      <% form_remote_tag :url => session_path, :method => 'post', :html => { :class => "map_overlay", :id => "map_overlay_login" } do %>
        <p id="signup_mailaddr">
          <label for="email">Email</label>
          <%= text_field_tag :email %>
        </p>
        <p id="signup_password">
          <label for="password">Passwort</label>
          <%= password_field_tag :password %>
          <br /><small>(wurde dir bei der Anmeldung per E-Mail geschickt)</small>
        </p>
        <p><%= submit_tag 'Einloggen' %></p>
      <% end %>
      <script type="text/javascript">
        Event.observe(window, 'load', function() {
          if (google.loader.ClientLocation) {
            var point = new GLatLng(google.loader.ClientLocation.latitude, google.loader.ClientLocation.longitude);
            var marker = new GMarker(point);
            map.addOverlay(marker);
            Map.last_added_marker = marker;
            if ($('town_district')) {
              var city = google.loader.ClientLocation.address.city.replace('Vienna', 'Wien');
              if(city == 'Wien') { //Township.find(:all, :conditions => "name LIKE 'Wien%'")
                $('town_district').toggleClassName('state_district');
              } else {
                $('user_town').value = city;
              }
            }
          }
        });
      </script>
      
      <% elsif current_user.town #logged in and has town
        c = current_user.town.constituency
      %>

      <script type="text/javascript">
        Event.observe(window, 'load', function() {
          Map.place_marker('<%= current_user.town.full_name %>', '<strong><big><%=c.full_name %></big></strong><br /><%= link_to 'Veranstaltungen &amp; Diskussion in meiner Nähe', url_for(:controller => 'geo', :action => 'local', :name => c.url_friendly_name), :target => '_top' %>', '<%= c.full_name %>');
        });
      </script>    

    <% end %>
    
    <%= @map.to_html %>
    <script type="text/javascript">
      window.onload = addCodeToFunction(window.onload,function() {
          Map.init_overlays(map,"http://localhost:3000/constituencies.kml");
      });
    </script>
    <div class="map_container">
      <%= @map.div(:width => '100%', :height => '100%') %>
    </div>
  </body>
</html>