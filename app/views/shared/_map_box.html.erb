          <script type="text/javascript">
            window.fbAsyncInit = function() {
              FB.init({
                appId: '<%= CONFIG[:Facebook]['appid'] %>', //120956097919751
                status: true, // check login status
                cookie: true, // enable cookies to allow the server to access the session
                xfbml: true  // parse XFBML
                //apiKey: 'ca1fb858a2abcd760a8d924b9a4bd8c0'
              });
              FB.Event.subscribe('auth.login', OC.facebook_signup);
              FB.Event.subscribe('auth.sessionChange', function(response) {
                console.log('sessionchange!');
                if (!response.session) {
                  // The user has logged out, and the cookie has been cleared
                  clearDisplay();
                  return;
                }
              });
              function clearDisplay() { // no user, clear display
                document.getElementById('fb-userinfo').innerHTML = '';
              }
            }
          </script>
          <!--fb:login-button show-faces="true" width="200" max-rows="1" /-->
          <fb:login-button perms="email"></fb:login-button>

          <div id="fb-root"></div>

          <div id="fb-userinfo"></div>          
        </div>

        <div id="login" class="switchbox">
          <% form_remote_tag :url => session_path, :method => 'post', :html => { :class => "map_overlay", :id => "map_overlay_login" } do %>
            <p id="signup_mailaddr">
              <label for="email">Email</label>
              <%= text_field_tag :email %>
            </p>
            <p id="signup_password">
              <label for="password">Passwort</label>
              <%= password_field_tag :password %>
              <br /><small>(wurde dir bei der Anmeldung per E-Mail geschickt)</small>
            </p>
            <p><%= submit_tag 'Einloggen' %></p>
          <% end %>
        </div>
      
