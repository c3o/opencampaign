<div class="page">
  <div class="header">
    <%= link_to "&larr; Zurück zur Video-Übersicht", video_path, :class => 'backbutton' %>
    <h2>Warum ich <%= CONFIG["org_title"] %> unterstütze: <%= @video.user.name || '' %></h2>
  </div>
  <div class="content">
  
  <% if @video && ((logged_in? && current_user.is_admin) || @video.is_approved) %>
     <%= render :partial=>'embed', :locals => { :video => video } %>
  <% else %>
    <p>Video nicht gefunden.</p>
  <% end %>
  
  </div>
</div>